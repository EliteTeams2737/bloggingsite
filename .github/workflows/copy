name: Deploy to Cloudflare Pages

on:
  workflow_dispatch:  # Manual trigger
  push:
    branches:
      - main  # Change to your default branch if different

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v3

    - name: List root directory
      run: ls -la

    - name: Check directory existence
      run: |
        if [ -d "site/educationwithwork.wixsite.com/index" ]; then
          echo "Directory exists"
        else
          echo "Directory does not exist"
          exit 1
        fi

    - name: List directory contents
      run: ls -la site/educationwithwork.wixsite.com/index

    - name: Copy files to main directory
      run: |
        cp -r site/educationwithwork.wixsite.com/index/* ./
        ls -la  # Verify files were copied

    - name: Zip the directory
      run: |
        zip -r deploy.zip ./
        ls -la deploy.zip  # Verify the zip file was created

    - name: Deploy to Cloudflare Pages
      env:
        CF_API_TOKEN: ${{ secrets.CF_API_TOKEN }}
        CF_PROJECT_NAME: 'your-project-name'  # Replace with your actual project name
      run: |
        API_ENDPOINT="https://api.cloudflare.com/client/v4/pages/projects/${CF_PROJECT_NAME}/deployments"
        if curl -X POST "$API_ENDPOINT" \
          -H "Authorization: Bearer $CF_API_TOKEN" \
          -H "Content-Type: application/json" \
          -F "file=@deploy.zip"; then
          echo "Successfully deployed to Cloudflare Pages"
        else
          echo "Failed to deploy to Cloudflare Pages"
          exit 1
        fi
